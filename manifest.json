{
  "manifest_version": 2,
  "name": "Subtitle Keyword Search for Youtube",
  "background": {
    "scripts": ["background.js"]
  },
  "version": "1.0",
  "description": "An efficient way to skim YT videos",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YT"
	},
  "permissions": [
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
