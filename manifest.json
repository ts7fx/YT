{
  "manifest_version": 2,
  "name": "YouMerc",
  "short_name": "YouMerc",
  "version": "1.3",
  "description": "Keyword Search for Youtubeâ„¢ Subtitles, enables another way to watch videos",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouMerc"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["jquery.min.js", "main.js", "classes.js"],
      "css": ["style.css"]
    }]
}
