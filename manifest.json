{
  "manifest_version": 2,
  "name": "Subtitle Keyword Search for Youtube",
  "background": {
    "scripts": ["background.js"]
  },
  "version": "1.0",
  "description": "Another way to watch videos",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YTS"
	},
  "permissions": [
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["jquery.min.js", "content.js"],
      "css": ["style.css"]
    }
  ]
}
